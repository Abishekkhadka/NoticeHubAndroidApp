<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CodeVerificationActivity">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Curved Shape -->
        <ImageView
            android:id="@+id/top_curve"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:importantForAccessibility="no"
            android:src="@drawable/top_curve"
            android:scaleType="fitXY"
            android:layout_gravity="start" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="@color/blue"
            android:drawableEnd="@drawable/drop_down_arrow"
            android:importantForAutofill="no"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"
            android:text="@string/en"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="LabelFor,RtlSymmetry,TextFields" />

    </FrameLayout>

    <!-- App Logo -->
    <TextView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_logo"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/tvBackBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/back_arrow_icon"
            android:layout_gravity="start"
            tools:ignore="VisualLintOverlap" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_verification"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    </FrameLayout>



    <!-- Instruction -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_otp_sent_to_your_email_address"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        >
        <!-- OTP Input -->
        <EditText
            android:id="@+id/etOTP1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/edittext_background"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etOTP2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            android:background="@drawable/edittext_background"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <EditText
            android:id="@+id/etOTP3"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="118dp"
            android:background="@drawable/edittext_background"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <EditText
            android:id="@+id/etOTP4"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:background="@drawable/edittext_background"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <EditText
            android:id="@+id/etOTP5"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="236dp"
            android:background="@drawable/edittext_background"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etOTP6"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/edittext_background"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </FrameLayout>

    <!-- Verify Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/edittext_background"
        app:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

    <!-- Bottom Curved Shape -->
    <ImageView
        android:id="@+id/bottom_curve"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:importantForAccessibility="no"
        android:src="@drawable/bottom_curve"
        android:scaleType="fitXY"
        android:layout_gravity="end"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="0dp" />

</LinearLayout>