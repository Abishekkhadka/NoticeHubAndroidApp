<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="314dp"
        android:background="@drawable/content_edittext_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints,UselessParent,TextSizeCheck">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBackBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:drawableStartCompat="@drawable/back_arrow_icon"
                tools:ignore="VisualLintOverlap" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/email_verification"
                android:textColor="@color/blue"
                android:textSize="24sp"
                android:textStyle="bold" />

        </FrameLayout>


        <!-- Instruction -->
        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/enter_the_otp_sent_to_your_email_address"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


        <!-- OTP Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <!-- OTP Input -->
            <EditText
                android:id="@+id/etOTP1"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etOTP2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginStart="10dp"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/etOTP3"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginStart="10dp"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/etOTP4"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:importantForAutofill="no"
                android:inputType="number"
                android:layout_marginStart="10dp"
                android:maxLength="1"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/etOTP5"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:minHeight="48dp"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etOTP6"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/edittext_background"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:minHeight="48dp"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="LabelFor,RtlCompat,TextFields,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintBounds" />

        </LinearLayout>

        <!-- Verify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_background"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/blue"
            tools:ignore="VisualLintButtonSize" />


    </LinearLayout>

</LinearLayout>